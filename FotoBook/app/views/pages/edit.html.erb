<style>
  .nav-div{
    width: 400px;
  }
  @media screen and (min-width: 600px){
    .nav-div{
      width:300px;
    }
  }
  .nav-item .rounded-circle{
    width: 40px;
    height: 40px;
    margin: 0;
  }
  .nav-item{
   padding-left: 50px;
 }

 .nav-item{
  color: white;
  font-weight: bold;
}

.nobd{
  background-color: #eee;
}
.leftpane {
  width: 15%;
  height: 100%;
  float: left;
  border-collapse: collapse;
}

.middlepane {
  margin-top: 20px;
  width: 70%;
  height: 100%;
  float: left;
  background-color: white;
  border-collapse: collapse;
/*  display: flex;
flex-wrap: wrap;*/
}

.rightpane {
  width: 15%;
  height: 100%;
  position: relative;
  float: right;
  border-collapse: collapse;
}
.nw-ct{
  padding-top: 50px;
}

.image{
  width: 150px;
  height: 150px;
  margin:15px;
  margin-left: 50px;
  border-radius: 5px;
}
.pull-down {
  position: absolute;
  bottom: 3px;
  right: 0px;
  height: 25px;
  width: 50px;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  background-color: #555;
  color: white;
  font-size: 12px;
  padding: 5px 10px;
  border: none;
  cursor: pointer;
  border-radius: 5px;
  opacity: 0.5;
}
.pull-up{
  position: absolute;
  top: 15px;
  right: 18px;
  color: red;
}
.images .btn:hover {
  background-color: black;
}
</style>
<body class="nobd">
  <div class="leftpane">
    <div class="nw-ct text-center">
      <!-- <a href="feeds.html"><b>Feed</b></a> -->
      <%= link_to "Feed", root_path,class: 'font-weight-bold' %>
      <br>
      <a href="feeds.html"><b>Discover</b></a>
    </div>
  </div>
  <div class="middlepane">
    <div class="container" style="background-color: white">
      <br />
      <div class="row">
        <!--Avatar-->
        <div class="col-md-3">
          <% if current_user.avatar?%>
          <img src="<%=current_user.avatar.url%>" class="profile-avatar w-75 ml-5 rounded-circle" alt="" />
          <% else %>
          <img src="/assets/default-user.png" class="profile-avatar w-75 ml-5 rounded-circle" alt="" />
          <% end %>
        </div>
        <div class="col-mid-8">
          <%= link_to "Edit profile", edit_user_registration_path,class: "btn btn-primary" %>
          <h2 class="text-dark"><%= "#{current_user.lastname} #{current_user.firstname}"%></h2>
          <!-- Nav tabs -->
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#photo"> <%= @photos.size %> Photos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#album"> <%= @albums.size %> Albums</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#following">Followings</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#follower">Followers</a>
            </li>
          </ul>
        </div>
      </div>

      <div class="tab-content">
        <div id="photo" class="tab-pane active" >
          <div>
            <%= link_to "Add Photo", new_photo_path,class: "btn btn-success float-right mr-5" %>
          </div>
          <br>
          <br>
          <div class="d-flex flex-wrap">
            <% @photos.each do |photo| %>
            <div class="photo text-center">
              <div class="images" style="position: relative;">
                <%= link_to image_tag(photo.image.url, class: 'image'), photo.image.url, target: '_blank' %>
                <% if photo.isPrivate? %>
                <i class="fa fa-lock pull-up"></i>
                <% end %>
                <%= link_to "EDIT", edit_photo_path(photo.id), class: "btn text-white pull-down" %>
              </div>
              <div class="title ml-4 mt-n3">
                <%= photo.title %>
              </div>
            </div>
            <% end %>
          </div>
        </div>

        <!--Album--->
        <div id="album" class="tab-pane fade" >
          <div class="d-flex flex-wrap justify-content-end">
            <%= link_to "Add Album", new_album_path,class: "btn btn-success float-right mr-5" %>
          </div>

          <div class="d-flex flex-wrap justify-content-start">
            <% @albums.each do |album| %>
            <div class="albums" >
              <div class="images mt-2" style="position: relative;">
                <%= image_tag(album.pictures.first.image.url, class: 'image img-thumbnail',style: 'position: absolute;transform: rotateZ(4deg);') %>
                <%= image_tag(album.pictures.first.image.url, class: 'image img-thumbnail',style: 'position: absolute;transform: rotateZ(8deg);') %>
                <%= image_tag(album.pictures.first.image.url, class: 'image img-thumbnail') %>
                <% if album.isPrivate? %>
                <i class="fa fa-lock pull-up"></i>
                <% end %>
                <%= link_to "EDIT", edit_album_path(album.id), class: "btn text-white pull-down" %>
              </div>
              <p class="text-center"><%=album.title%></p>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="rightpane">
  </div>
</body>